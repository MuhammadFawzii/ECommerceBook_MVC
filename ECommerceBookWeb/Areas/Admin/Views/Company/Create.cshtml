@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* Custom Validation ,ALl,ModeOnly,None *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control border-0 shadow-sm" placeholder="Company Name" />
                            <label asp-for="Name">Company Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="StreetAddress" class="form-control border-0 shadow-sm" placeholder="Street Address" />
                            <label asp-for="StreetAddress">Street Address</label>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input asp-for="City" class="form-control border-0 shadow-sm" placeholder="City" />
                            <label asp-for="City">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input asp-for="State" class="form-control border-0 shadow-sm" placeholder="State" />
                            <label asp-for="State">State</label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <input asp-for="PostalCode" class="form-control border-0 shadow-sm" placeholder="Postal Code" />
                            <label asp-for="PostalCode">Postal Code</label>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control border-0 shadow-sm" placeholder="Phone Number" />
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                <div class=" row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>

                </div>
            </div>






        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
