@{
    var status = Context.Request.Query["status"];
    var pending = status == "pending" ? "active text-white bg-primary" : "text-primary";
    var inprocess = status == "inprocess" ? "active text-white bg-primary" : "text-primary";
    var completed = status == "completed" ? "active text-white bg-primary" : "text-primary";
    var approved = status == "approved" ? "active text-white bg-primary" : "text-primary";
    var all = status == "all" ? "active text-white bg-primary" : "text-primary";
}

@model List<OrderHeader>

<div class="container-fluid py-4">
    <div class="card shadow-lg border-0 rounded-3 mt-4">
        <div class="card-header bg-gradient bg-primary py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="fw-bold text-white mb-0">Order List</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="d-flex flex-wrap justify-content-center p-3 mb-4 bg-light rounded-3 shadow-sm">
                <div class="nav nav-pills">
                    <a class="nav-link mx-1 mb-2 mb-md-0 fw-medium @inprocess" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                        In Process
                    </a>
                    <a class="nav-link mx-1 mb-2 mb-md-0 fw-medium @pending" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                        Payment Pending
                    </a>
                    <a class="nav-link mx-1 mb-2 mb-md-0 fw-medium @completed" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                        Completed
                    </a>
                    <a class="nav-link mx-1 mb-2 mb-md-0 fw-medium @approved" asp-controller="Order" asp-action="Index" asp-route-status="approved">
                        Approved
                    </a>
                    <a class="nav-link mx-1 mb-2 mb-md-0 fw-medium @all" asp-controller="Order" asp-action="Index" asp-route-status="all">
                        All
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table id="tblData" class="table table-bordered table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr class="text-uppercase small fw-bold">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be populated by DataTables via order.js -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}