@model List<Product>
@* <partial name="_Notification" /> *@
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-0 pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-dotted"></i> Add New Product</a>
            </div>

        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>

                </tr>

            </thead>
            <tbody>
                @foreach (Product product in Model.OrderBy(c => c.Id))
                {
                    <tr>
                        <td>@product.Title</td>
                        <td>@product.ISBN</td>
                        <td>@product.Price</td>
                        <td>@product.Author</td>
                        <td>@product.Category.Name</td>
                        <td>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id=@product.Id class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Update
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id=@product.Id class="btn btn-danger btn-sm">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


