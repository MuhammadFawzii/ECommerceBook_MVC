
@model List<Category>
@* <partial name="_Notification" /> *@
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-0 pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-dotted"></i> Add New Category</a>
            </div>

        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>Display Order</th>
                    <th></th>

                </tr>

            </thead>
            <tbody>
                @foreach (Category category in Model.OrderBy(c => c.DisplayOrder))
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id=@category.Id class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Update
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id=@category.Id class="btn btn-danger btn-sm">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


