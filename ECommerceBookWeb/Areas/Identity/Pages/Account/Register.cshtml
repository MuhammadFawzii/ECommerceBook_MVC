@page
@model RegisterModel

<div class="card shadow border-0 mt-5 mx-auto" style="max-width: 800px;">
    <div class="card-header bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white fw-bold">Create Account</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-2">
            <div class="col-md-12">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4 class="border-bottom pb-3 mb-4 text-secondary text-center fw-light">
                        Enter your information below
                    </h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger rounded p-2 mb-3 bg-danger-subtle" role="alert"></div>

                    <div class="row">
                        <!-- Account Information Section -->
                        <div class="col-12 mb-3">
                            <h5 class="text-primary fw-light">Account Information</h5>
                        </div>

                        <div class="col-md-12 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="text-muted">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="text-muted">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="col-12 mb-3">
                            <h5 class="text-primary fw-light">Personal Information</h5>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.Name" class="form-control form-control-lg" placeholder="name@example.com" />
                                <label asp-for="Input.Name" class="text-muted">Full Name</label>
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" placeholder="name@example.com" />
                                <label asp-for="Input.PhoneNumber" class="text-muted">Phone Number</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Address Section -->
                        <div class="col-12 mb-3">
                            <h5 class="text-primary fw-light">Address Information</h5>
                        </div>

                        <div class="col-md-12 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.StreetAddress" class="form-control form-control-lg" placeholder="name@example.com" />
                                <label asp-for="Input.StreetAddress" class="text-muted">Street Address</label>
                                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.City" class="form-control form-control-lg" placeholder="name@example.com" />
                                <label asp-for="Input.City" class="text-muted">City</label>
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="form-floating">
                                <input asp-for="Input.State" class="form-control form-control-lg" placeholder="name@example.com" />
                                <label asp-for="Input.State" class="text-muted">State</label>
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4 mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.PostalCode" class="form-control form-control-lg" placeholder="name@example.com" />
                                <label asp-for="Input.PostalCode" class="text-muted">Postal Code</label>
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6 mb-3">
                            <!-- Role Selection -->
                            <div class="col-12 mb-3">
                                <h5 class="text-primary fw-light">Account Role</h5>
                            </div>

                            <div class="col-md-12 mb-4">
                                <div class="form-floating">
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select  form-select-lg">
                                        <option value="" selected="selected" disabled class="text-muted">Select a role</option>
                                    </select>
                                    <label asp-for="Input.Role" class="text-muted">Role</label>
                                </div>
                            </div>
                        </div>
                        
                            <div class="col-6 mb-3" style="display:none" id="companySection">
                                <!-- Company Selection -->
                                <div class="col-12 mb-3">
                                    <h5 class="text-primary fw-light">Company Selection</h5>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <div class="form-floating">
                                        <select asp-for="Input.CompanyId" asp-items="@Model.Input.CompanyList" class="form-select form-select-lg">
                                            <option value="" selected="selected" disabled class="text-muted">Select a Company</option>
                                        </select>
                                        <label asp-for="Input.CompanyId" class="text-muted">Company</label>
                                    </div>
                                </div>
                            </div>

                        
                        
                    </div>

                    <div class="row mt-2">
                        <div class="col-12">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary shadow-sm">Create Account</button>
                        </div>

                        <div class="col-12 text-center mt-3">
                            <a asp-page="./Login" class="text-decoration-none">Already have an account? Sign in</a>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-12 mt-4">
                <div class="position-relative text-center mb-4">
                    <hr class="text-muted" />
                    <span class="position-absolute top-50 start-50 translate-middle px-3 bg-white text-muted">or register with</span>
                </div>

                <section>
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="alert alert-info text-center py-2">
                                <p class="mb-0 small">
                                    No external authentication services configured. <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-decoration-none">
                                        Learn more about setting up external logins
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div class="d-flex gap-2 justify-content-center">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-secondary px-4 py-2" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                            @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready (function(){
            $('#Input_Role').change(function(){
                var selectRole= $('#Input_Role Option:Selected').text();
                if(selectRole == "Company")
                {
                    $('#companySection').show();
                }
                else
                {
                    $('#companySection').hide();
                }
            })
        })

    </script>
}