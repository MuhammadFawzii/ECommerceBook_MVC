@page
@using ECommerceBookRazor_Temp.Models
@model ECommerceBookRazor_Temp.Pages.Categories.IndexModel

@* <partial name="_Notification" /> *@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>

        </div>
        <div class="col-6 text-end" >
            <a asp-page="/categories/create" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i> Add New Category</a>
        </div>

    </div>
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>Display Order</th>
                <th></th>

            </tr>

        </thead>
        <tbody>
            @foreach (Category category in Model.Categories.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <a asp-page="/categories/edit" asp-route-id=@category.Id class="btn btn-secondary "> <i class="bi bi-pencil-square"></i> Update</a>
                        <a asp-page="/categories/delete" asp-route-id=@category.Id class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Delete</a>

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
